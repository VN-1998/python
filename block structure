a = int(input("enter the number of blocks:"))
b = int(input("enter the number of lines:"))
c = int(input("enter the number of stars:"))
sum = 0
for i in range(25):
    print("-",end =" ")
print()
for i in range (a):
    print(f"---------block{i}---------")
    count = 0
    for j in range(b-i):
        for k in range(c):
            print("*", end=" ")
            count = count +1
        print()
    print(count)
    sum += count
print(f"Total: {sum}")
